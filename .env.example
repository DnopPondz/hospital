# SMTP server configuration used by the contact form
SMTP_HOST=smtp.example.com
SMTP_PORT=587 # พอร์ตที่รองรับ STARTTLS
SMTP_SECURE=false
SMTP_STARTTLS=true

# หากใช้พอร์ต 465 (SMTPS) ให้ตั้งค่า:
# SMTP_PORT=465
# SMTP_SECURE=true
# SMTP_STARTTLS=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password

# Optional: override the display name and from address
# SMTP_FROM=no-reply@example.com
# SMTP_FROM_NAME=ThaiGov Portal
# SMTP_CLIENT_NAME=portal.th.gov

# Email address that will receive messages from the contact form
CONTACT_EMAIL_TO=support@example.com
